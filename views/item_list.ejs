<!DOCTYPE html>
<html>
  <head>
    <%- include headerinfo.ejs -%>
  </head>
  <body>
    <div class='container-fluid'>
      <div class='row'>
        <%- include sidebar.ejs -%>
        <div class='col-sm-10'>
          <h1><%= title %></h1>
          <hr>
          
          <% if (!locals.stores) {%>
            <p>NO ITEMS FOUND</p>
          <% } else { %>
            <% for (var i = 0; i < stores.length; i++) { %>
                <div class='categoryTitle'>
                  <%= stores[i].location %>
                  <div>
                    <% for (var j = 0; j < stores[i].items.length; j++) { %>
                      <div class='item_box'>
                        <img src="<%= stores[i].items[j].picture == 'holder' ? '/images/default.jpg': stores[i].items[j].picture %>" alt="">
                        <br>
                        <a href='<%=stores[i].items[j].url%>'><%=stores[i].items[j].name%></a>
                        <p>Stock: <%=stores[i].items[j].quantity%></p>
                        <p>Price: $<%=stores[i].items[j].price%></p>
                      </div>
                    <% } %>
                  </div>  
                </div>
            <% } %>
          <% } %>


        </div>
      </div>
    </div>
  </body>
</html>


