<!DOCTYPE html>
<html>
  <head>
    <%- include headerinfo.ejs -%>
  </head>
  <body>
    <div class='container-fluid'>
      <div class='row'>
        <%- include sidebar.ejs -%>
        <div class='col-sm-10'>
          <h1><%= title %></h1>
          <hr>
          
          <% if (!locals.categories) {%>
            <p>NO CATEGORIES FOUND</p>
          <% } else { %>
            <% for (var i = 0; i < categories.length; i++) { %>
                <div class='categoryTitle'>
                  <a href="<%=categories[i].url%>"><%= categories[i].name %></a>
                </div>
            <% } %>
          <% } %>


        </div>
      </div>
    </div>
  </body>
</html>


