<!DOCTYPE html>
<html>
  <head>
    <%- include headerinfo.ejs -%>
  </head>
  <body>
    <div class='container-fluid'>
      <div class='row'>
        <%- include sidebar.ejs -%>
        <div class='col-sm-10'>
          <h1><%= title %></h1>
          <hr>
          
          <% if (locals.category_items.length) { %>
            <p>Delete the following items before you delete this category</p>
            <div style="margin-left: 20px; margin-top: 20px">
            <h4>Items</h4>
            <dl>
                <% category_items.forEach(item => { %>
                <dt>
                <a href="<%= item.url %>"><%= item.name %></a>
                <p>Quantity: <%= item.quantity%></p>
                </dt>
                <%}) %>
            </dl>
            </div>
            <% } else { %>
                <p>Do you really want to delete this category?</p>
                <form action="" method="POST">
                <div class="form-group">
                    <input type="hidden" id="categoryid" name="categoryid" required="true" value="<%= category._id %>" class="form-control">
                </div>
                <button class="btn btn-primary" type="submit">Delete</button>
                </form>
            <% } %>


        </div>
      </div>
    </div>
  </body>
</html>


